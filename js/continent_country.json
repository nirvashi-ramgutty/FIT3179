{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "data": [
    {"name": "continent_selection_store"},
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/nirvashi-ramgutty/FIT3179/master/data/death_rates_by_continent.csv",
      "format": {"type": "csv", "parse": {"Year": "date"}, "delimiter": ","}
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "field": "Year",
          "type": "timeunit",
          "units": ["year"],
          "as": ["year_Year", "year_Year_end"]
        },
        {
          "type": "aggregate",
          "groupby": ["year_Year", "Continent"],
          "ops": ["mean"],
          "fields": ["air_pollution"],
          "as": ["mean_air_pollution"]
        }
      ]
    },
    {
      "name": "data_1",
      "source": "data_0",
      "transform": [
        {
          "type": "filter",
          "expr": "(isDate(datum[\"year_Year\"]) || (isValid(datum[\"year_Year\"]) && isFinite(+datum[\"year_Year\"]))) && isValid(datum[\"mean_air_pollution\"]) && isFinite(+datum[\"mean_air_pollution\"])"
        }
      ]
    },
    {
      "name": "data_2",
      "source": "source_0",
      "transform": [
        {
          "type": "filter",
          "expr": "(vlSelectionTest(\"continent_selection_store\", datum))"
        }
      ]
    },
    {
      "name": "data_3",
      "source": "data_2",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["Country", "Continent"],
          "ops": ["mean"],
          "fields": ["air_pollution"],
          "as": ["mean_air_pollution"]
        },
        {
          "type": "stack",
          "groupby": ["Country"],
          "field": "mean_air_pollution",
          "sort": {"field": ["Continent"], "order": ["descending"]},
          "as": ["mean_air_pollution_start", "mean_air_pollution_end"],
          "offset": "zero"
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"mean_air_pollution\"]) && isFinite(+datum[\"mean_air_pollution\"])"
        }
      ]
    }
  ],
  "signals": [
    {"name": "concat_0_width", "value": 1500},
    {"name": "concat_0_height", "value": 300},
    {"name": "concat_1_x_step", "value": 20},
    {
      "name": "concat_1_width",
      "update": "bandspace(domain('concat_1_x').length, 0.1, 0.05) * concat_1_x_step"
    },
    {"name": "concat_1_height", "value": 200},
    {
      "name": "unit",
      "value": {},
      "on": [
        {"events": "mousemove", "update": "isTuple(group()) ? group() : unit"}
      ]
    },
    {
      "name": "continent_selection_Continent_legend",
      "value": null,
      "on": [
        {
          "events": [
            {
              "source": "view",
              "type": "click",
              "markname": "Continent_legend_symbols"
            },
            {
              "source": "view",
              "type": "click",
              "markname": "Continent_legend_labels"
            },
            {
              "source": "view",
              "type": "click",
              "markname": "Continent_legend_entries"
            }
          ],
          "update": "datum.value || item().items[0].items[0].datum.value",
          "force": true
        },
        {
          "events": [{"source": "view", "type": "click"}],
          "update": "!event.item || !datum ? null : continent_selection_Continent_legend",
          "force": true
        }
      ]
    },
    {
      "name": "continent_selection",
      "update": "vlSelectionResolve(\"continent_selection_store\", \"union\", true)"
    }
  ],
  "layout": {"padding": 20, "columns": 1, "bounds": "full", "align": "each"},
  "marks": [
    {
      "type": "group",
      "name": "concat_0_group",
      "title": {
        "text": "Average Death Rate from Air Pollution by Continent",
        "fontSize": 16,
        "align": "center",
        "frame": "group"
      },
      "style": "cell",
      "encode": {
        "update": {
          "width": {"signal": "concat_0_width"},
          "height": {"signal": "concat_0_height"}
        }
      },
      "signals": [
        {
          "name": "continent_selection_tuple",
          "update": "continent_selection_Continent_legend !== null ? {fields: continent_selection_tuple_fields, values: [continent_selection_Continent_legend]} : null"
        },
        {
          "name": "continent_selection_tuple_fields",
          "value": [{"type": "E", "field": "Continent"}]
        },
        {
          "name": "continent_selection_toggle",
          "value": false,
          "on": [
            {
              "events": {"merge": [{"source": "view", "type": "click"}]},
              "update": "event.shiftKey"
            }
          ]
        },
        {
          "name": "continent_selection_modify",
          "on": [
            {
              "events": {"signal": "continent_selection_tuple"},
              "update": "modify(\"continent_selection_store\", continent_selection_toggle ? null : continent_selection_tuple, continent_selection_toggle ? null : true, continent_selection_toggle ? continent_selection_tuple : null)"
            }
          ]
        }
      ],
      "marks": [
        {
          "name": "concat_0_layer_0_pathgroup",
          "type": "group",
          "from": {
            "facet": {
              "name": "faceted_path_concat_0_layer_0_main",
              "data": "data_0",
              "groupby": ["Continent"]
            }
          },
          "encode": {
            "update": {
              "width": {"field": {"group": "width"}},
              "height": {"field": {"group": "height"}}
            }
          },
          "marks": [
            {
              "name": "concat_0_layer_0_marks",
              "type": "line",
              "style": ["line"],
              "sort": {"field": "datum[\"year_Year\"]"},
              "interactive": true,
              "from": {"data": "faceted_path_concat_0_layer_0_main"},
              "encode": {
                "update": {
                  "stroke": {"scale": "color", "field": "Continent"},
                  "opacity": [
                    {
                      "test": "(vlSelectionTest(\"continent_selection_store\", datum))",
                      "value": 6
                    },
                    {"value": 0.3}
                  ],
                  "tooltip": {
                    "signal": "{\"Continent\": isValid(datum[\"Continent\"]) ? datum[\"Continent\"] : \"\"+datum[\"Continent\"], \"Average Death Rate\": format(datum[\"mean_air_pollution\"], \".2f\"), \"Year\": timeFormat(datum[\"year_Year\"], timeUnitSpecifier([\"year\"], {\"year-month\":\"%b %Y \",\"year-month-date\":\"%b %d, %Y \"}))}"
                  },
                  "description": {
                    "signal": "\"Year: \" + (timeFormat(datum[\"year_Year\"], timeUnitSpecifier([\"year\"], {\"year-month\":\"%b %Y \",\"year-month-date\":\"%b %d, %Y \"}))) + \"; Avg Death Rate: \" + (format(datum[\"mean_air_pollution\"], \"\")) + \"; Continent: \" + (isValid(datum[\"Continent\"]) ? datum[\"Continent\"] : \"\"+datum[\"Continent\"]) + \"; Average Death Rate: \" + (format(datum[\"mean_air_pollution\"], \".2f\"))"
                  },
                  "x": {"scale": "concat_0_x", "field": "year_Year"},
                  "y": {"scale": "concat_0_y", "field": "mean_air_pollution"},
                  "defined": {
                    "signal": "isValid(datum[\"year_Year\"]) && isFinite(+datum[\"year_Year\"]) && isValid(datum[\"mean_air_pollution\"]) && isFinite(+datum[\"mean_air_pollution\"])"
                  }
                }
              }
            }
          ]
        },
        {
          "name": "concat_0_layer_1_marks",
          "type": "symbol",
          "style": ["point"],
          "interactive": true,
          "from": {"data": "data_1"},
          "encode": {
            "update": {
              "opacity": [
                {
                  "test": "(vlSelectionTest(\"continent_selection_store\", datum))",
                  "value": 6
                },
                {"value": 0.3}
              ],
              "fill": {"scale": "color", "field": "Continent"},
              "tooltip": {
                "signal": "{\"Continent\": isValid(datum[\"Continent\"]) ? datum[\"Continent\"] : \"\"+datum[\"Continent\"], \"Average Death Rate\": format(datum[\"mean_air_pollution\"], \".2f\"), \"Year\": timeFormat(datum[\"year_Year\"], timeUnitSpecifier([\"year\"], {\"year-month\":\"%b %Y \",\"year-month-date\":\"%b %d, %Y \"}))}"
              },
              "ariaRoleDescription": {"value": "point"},
              "description": {
                "signal": "\"Year: \" + (timeFormat(datum[\"year_Year\"], timeUnitSpecifier([\"year\"], {\"year-month\":\"%b %Y \",\"year-month-date\":\"%b %d, %Y \"}))) + \"; Avg Death Rate: \" + (format(datum[\"mean_air_pollution\"], \"\")) + \"; Continent: \" + (isValid(datum[\"Continent\"]) ? datum[\"Continent\"] : \"\"+datum[\"Continent\"]) + \"; Average Death Rate: \" + (format(datum[\"mean_air_pollution\"], \".2f\"))"
              },
              "x": {"scale": "concat_0_x", "field": "year_Year"},
              "y": {"scale": "concat_0_y", "field": "mean_air_pollution"}
            }
          }
        }
      ],
      "axes": [
        {
          "scale": "concat_0_x",
          "orient": "bottom",
          "gridScale": "concat_0_y",
          "grid": true,
          "tickCount": {"signal": "ceil(concat_0_width/40)"},
          "domain": false,
          "labels": false,
          "aria": false,
          "maxExtent": 0,
          "minExtent": 0,
          "ticks": false,
          "zindex": 0
        },
        {
          "scale": "concat_0_y",
          "orient": "left",
          "gridScale": "concat_0_x",
          "grid": true,
          "tickCount": {"signal": "ceil(concat_0_height/40)"},
          "domain": false,
          "labels": false,
          "aria": false,
          "maxExtent": 0,
          "minExtent": 0,
          "ticks": false,
          "zindex": 0
        },
        {
          "scale": "concat_0_x",
          "orient": "bottom",
          "grid": false,
          "title": "Year",
          "labelFontSize": 14,
          "titleFontSize": 14,
          "format": {
            "signal": "timeUnitSpecifier([\"year\"], {\"year-month\":\"%b %Y \",\"year-month-date\":\"%b %d, %Y \"})"
          },
          "labelFlush": true,
          "labelOverlap": true,
          "tickCount": {"signal": "ceil(concat_0_width/40)"},
          "zindex": 0
        },
        {
          "scale": "concat_0_y",
          "orient": "left",
          "grid": false,
          "title": "Avg Death Rate",
          "labelFontSize": 14,
          "titleFontSize": 14,
          "labelOverlap": true,
          "tickCount": {"signal": "ceil(concat_0_height/40)"},
          "zindex": 0
        }
      ]
    },
    {
      "type": "group",
      "name": "concat_1_group",
      "title": {
        "text": "Average Death Rate from Air Pollution by Country",
        "align": "left",
        "fontSize": 16,
        "frame": "group"
      },
      "style": "cell",
      "encode": {
        "update": {
          "width": {"signal": "concat_1_width"},
          "height": {"signal": "concat_1_height"}
        }
      },
      "marks": [
        {
          "name": "concat_1_marks",
          "type": "rect",
          "style": ["bar"],
          "interactive": true,
          "from": {"data": "data_3"},
          "encode": {
            "update": {
              "fill": {"scale": "color", "field": "Continent"},
              "tooltip": {
                "signal": "{\"Country\": isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"], \"Average Death Rate\": format(datum[\"mean_air_pollution\"], \".2f\")}"
              },
              "ariaRoleDescription": {"value": "bar"},
              "description": {
                "signal": "\"Country: \" + (isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"]) + \"; Avg Death Rate: \" + (format(datum[\"mean_air_pollution\"], \"\")) + \"; Continent: \" + (isValid(datum[\"Continent\"]) ? datum[\"Continent\"] : \"\"+datum[\"Continent\"]) + \"; Average Death Rate: \" + (format(datum[\"mean_air_pollution\"], \".2f\"))"
              },
              "x": {"scale": "concat_1_x", "field": "Country"},
              "width": {"scale": "concat_1_x", "band": 1},
              "y": {"scale": "concat_1_y", "field": "mean_air_pollution_end"},
              "y2": {"scale": "concat_1_y", "field": "mean_air_pollution_start"}
            }
          }
        }
      ],
      "axes": [
        {
          "scale": "concat_1_y",
          "orient": "left",
          "gridScale": "concat_1_x",
          "grid": true,
          "tickCount": {"signal": "ceil(concat_1_height/40)"},
          "domain": false,
          "labels": false,
          "aria": false,
          "maxExtent": 0,
          "minExtent": 0,
          "ticks": false,
          "zindex": 0
        },
        {
          "scale": "concat_1_x",
          "orient": "bottom",
          "grid": false,
          "labelAlign": "right",
          "labelAngle": 270,
          "labelBaseline": "middle",
          "zindex": 0
        },
        {
          "scale": "concat_1_y",
          "orient": "left",
          "grid": false,
          "title": "Avg Death Rate",
          "labelFontSize": 14,
          "titleFontSize": 14,
          "labelOverlap": true,
          "tickCount": {"signal": "ceil(concat_1_height/40)"},
          "zindex": 0
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "fields": [
          {"data": "data_0", "field": "Continent"},
          {"data": "data_1", "field": "Continent"},
          {"data": "data_3", "field": "Continent"}
        ],
        "sort": true
      },
      "range": "category"
    },
    {
      "name": "concat_0_x",
      "type": "time",
      "domain": {
        "fields": [
          {"data": "data_0", "field": "year_Year"},
          {"data": "data_1", "field": "year_Year"}
        ]
      },
      "range": [0, {"signal": "concat_0_width"}]
    },
    {
      "name": "concat_0_y",
      "type": "linear",
      "domain": {
        "fields": [
          {"data": "data_0", "field": "mean_air_pollution"},
          {"data": "data_1", "field": "mean_air_pollution"}
        ]
      },
      "range": [{"signal": "concat_0_height"}, 0],
      "nice": true,
      "zero": true
    },
    {
      "name": "concat_1_x",
      "type": "band",
      "domain": {
        "data": "data_2",
        "field": "Country",
        "sort": {"op": "mean", "field": "air_pollution", "order": "descending"}
      },
      "range": {"step": {"signal": "concat_1_x_step"}},
      "paddingInner": 0.1,
      "paddingOuter": 0.05
    },
    {
      "name": "concat_1_y",
      "type": "linear",
      "domain": {
        "data": "data_3",
        "fields": ["mean_air_pollution_start", "mean_air_pollution_end"]
      },
      "range": [{"signal": "concat_1_height"}, 0],
      "nice": true,
      "zero": true
    }
  ],
  "legends": [
    {
      "labelFontSize": 18,
      "title": "Continent Selection:",
      "titleFontSize": 18,
      "stroke": "color",
      "symbolType": "circle",
      "encode": {
        "labels": {
          "name": "Continent_legend_labels",
          "interactive": true,
          "update": {
            "opacity": [
              {
                "test": "(!length(data(\"continent_selection_store\")) || (continent_selection[\"Continent\"] && indexof(continent_selection[\"Continent\"], datum.value) >= 0))",
                "value": 1
              },
              {"value": 0.35}
            ]
          }
        },
        "symbols": {
          "name": "Continent_legend_symbols",
          "interactive": true,
          "update": {
            "opacity": [
              {
                "test": "(!length(data(\"continent_selection_store\")) || (continent_selection[\"Continent\"] && indexof(continent_selection[\"Continent\"], datum.value) >= 0))",
                "value": 6
              },
              {"value": 0.35}
            ]
          }
        },
        "entries": {
          "name": "Continent_legend_entries",
          "interactive": true,
          "update": {"fill": {"value": "transparent"}}
        }
      },
      "fill": "color"
    }
  ],
  "config": {}
}